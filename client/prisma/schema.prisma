// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Level {
  idLevel Int    @id @default(autoincrement())
  name    String
  users   User[]
}

model User {
  idUser    Int        @id @default(autoincrement())
  idLevel   Int
  name      String
  email     String     @unique
  password  String     @default("")
  level     Level      @relation(fields: [idLevel], references: [idLevel])
  favorites Favorite[]
}

model Type {
  idType   Int           @id @default(autoincrement())
  name     String
  pokemons PokemonType[]
}

model Pokemon {
  idPokemon Int           @id @default(autoincrement())
  name      String
  life      Int
  attack    Int
  defense   Int
  speed     Int
  height    Int
  weight    Int
  create    Boolean       @default(false)
  favorites Favorite[]
  types     PokemonType[]
}

model PokemonType {
  id        Int     @id @default(autoincrement())
  idType    Int
  idPokemon Int
  type      Type    @relation(fields: [idType], references: [idType])
  pokemon   Pokemon @relation(fields: [idPokemon], references: [idPokemon])
}

model Favorite {
  idFavorite Int       @id @default(autoincrement())
  users      User[]
  pokemons   Pokemon[]
}
